<h9>Editing Book</h9>

	<% if @book.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<ul>
				<% @book.errors.full_messages.each do |message| %>
				<li><%= message+"error" %></li>
				<% end %>
			</ul>
			
		</div>
	<% end %>


<%= form_for(@book) do |f| %>

	<h9>Title</h9>
		<%= f.text_field :title %>


	<h9>Opinion</h9>
		<%= f.text_area :body %>

	<%= f.submit 'Update Book' %>

<% end %>

<%= link_to 'Show', book_path(@book.id) %>
<%= link_to 'Back', books_path %>

